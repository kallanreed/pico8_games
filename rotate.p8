__lua__

function _init()
	a=90
	ax=0
	ay=0
	x1=64
	y1=64
	x2=ax+x1
	y2=ay+y1
end

function _update()
 --a=(a+1)%360
 if (btn(⬅️)) a=(a+1)%360
 if (btn(➡️)) a=(a-1)%360
 
 ax=cos(a/360)
 ay=sin(a/360)
 
	x2=ax*20+x1
	y2=ay*20+y1
end

function _draw()
 cls()
 
 --tline(x1-ay,y1-ax,x2-ay,y2-ax,
 -- 1+(7/8),0,-.125)
 --tline(x1,y1,x2,y2,1,0)
 --tline(x1+ay,y1+ax,x2+ay,y2+ax,
 -- 1+(7/8),0,-.125)
 
 line(x1,y1,x2,y2,7)
 line(x1-8,y1,x1+8,y1,8)
 line(x1-8,y1,x1-8,y2,10)
 line(x1+8,y1,x1+8,y2,10)
 line(x1-8,y2,x1+8,y2,12)
 
 print(ax..","..ay.." "..a)
end
